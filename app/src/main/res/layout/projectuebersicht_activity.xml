<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BGFarbig">

    <View
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="250dp"
        android:background="@drawable/bg_edge_only_top"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="50dp">
            <LinearLayout
                android:id="@+id/title_parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:paddingHorizontal="20dp"
                android:layout_marginVertical="50dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text"
                    android:outlineAmbientShadowColor="@color/text"
                    android:text="B25876"
                    android:textSize="18sp"
                    android:fontFamily="@font/segoe_ui"/>

                <TextView
                    android:layout_below="@+id/id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text"
                    android:outlineAmbientShadowColor="@color/text"
                    android:text="Heizkesselerneuerung Sparkasse Essen"
                    android:textSize="15sp"
                    android:fontFamily="@font/segoe_ui"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/progress"
                android:layout_below="@+id/title_parent"
                android:layout_marginTop="70dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingHorizontal="20dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_edge"
                        android:gravity="center"
                        android:paddingVertical="20dp"
                        android:layout_gravity="center"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text"
                            android:text="Produktivität"
                            android:layout_marginBottom="10dp"
                            android:textSize="15sp"
                            android:fontFamily="@font/segoe_ui"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.41"
                            android:textSize="25sp"
                            android:drawableStart="@drawable/bewertungicon"
                            android:drawablePadding="5dp"
                            android:fontFamily="@font/segoe_ui"
                            android:textColor="@color/Notfall"/>



                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_edge"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="10dp"
                        android:layout_marginTop="40dp"
                        android:layout_gravity="center"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text"
                            android:text="Aktuell IST"
                            android:layout_weight="1"
                            android:layout_gravity="center|left"
                            android:textSize="10sp"
                            android:fontFamily="@font/segoe_ui"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.41"
                            android:layout_weight="1"
                            android:textSize="18sp"
                            android:gravity="center|right"
                            android:drawablePadding="5dp"
                            android:fontFamily="@font/segoe_ui"
                            android:textColor="@color/Notfall"/>



                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_edge"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="10dp"
                        android:layout_marginVertical="10dp"
                        android:layout_gravity="center"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text"
                            android:text="Aktuell Soll"
                            android:layout_weight="1"
                            android:layout_gravity="center|left"
                            android:textSize="10sp"
                            android:fontFamily="@font/segoe_ui"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="70h"
                            android:layout_weight="1"
                            android:textSize="18sp"
                            android:gravity="center|right"
                            android:drawablePadding="5dp"
                            android:fontFamily="@font/segoe_ui"
                            android:textColor="@color/Notfall"/>



                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingHorizontal="20dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_edge"
                        android:gravity="center"
                        android:paddingVertical="20dp"
                        android:layout_gravity="center"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text"
                            android:text="Fortschritt"
                            android:layout_marginBottom="10dp"
                            android:textSize="15sp"
                            android:fontFamily="@font/segoe_ui"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="52 %"
                            android:textSize="25sp"
                            android:drawablePadding="5dp"
                            android:textColor="@color/Notfall"
                            android:fontFamily="@font/segoe_ui"/>



                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_edge"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="10dp"
                        android:layout_marginTop="40dp"
                        android:layout_gravity="center"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text"
                            android:text="Wird"
                            android:layout_weight="1"
                            android:layout_gravity="center|left"
                            android:fontFamily="@font/segoe_ui"
                            android:textSize="10sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="230h"
                            android:layout_weight="1"
                            android:textSize="18sp"
                            android:gravity="center|right"
                            android:drawablePadding="5dp"
                            android:fontFamily="@font/segoe_ui"
                            android:textColor="@color/warnung"/>



                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_edge"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="10dp"
                        android:layout_marginVertical="10dp"
                        android:layout_gravity="center"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text"
                            android:text="Gesamt Soll"
                            android:layout_weight="1"
                            android:layout_gravity="center|left"
                            android:fontFamily="@font/segoe_ui"
                            android:textSize="10sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="210h"
                            android:layout_weight="1"
                            android:textSize="18sp"
                            android:gravity="center|right"
                            android:drawablePadding="5dp"
                            android:fontFamily="@font/segoe_ui"
                            android:textColor="@color/Notfall"/>



                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/txt"
                android:layout_below="@id/progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:gravity="center"
                android:layout_marginTop="50dp"
                android:textColor="@color/text"
                android:fontFamily="@font/segoe_ui"
                android:text="Produktivität"/>

            <include
                layout="@layout/bar_cart"
                android:layout_below="@id/txt"
                android:layout_marginVertical="10dp"
                android:layout_marginBottom="50dp"
                android:layout_marginHorizontal="40dp"
                android:layout_height="match_parent"
                android:layout_width="match_parent" />

        </RelativeLayout>

    </ScrollView>




</RelativeLayout>